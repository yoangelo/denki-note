# ローカル環境でproductionモードをテストする際の設定
# 本番環境では使用しないこと
# 使用方法: docker compose --env-file .env.production.local up

# 共通
TZ=Asia/Tokyo

# DB（compose 内のPostgres）
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app_production
POSTGRES_PORT=5432
POSTGRES_HOST=db

# Rails
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_MAX_THREADS=5
# ローカル開発時はSSLを無効化
FORCE_SSL=false

# React
NODE_ENV=production
VITE_API_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# メール設定
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAIL_DOMAIN=yourdomain.com